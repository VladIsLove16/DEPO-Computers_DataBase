<Window x:Class="DEPO_Computers_DataBase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DEPO_Computers_DataBase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
        <StackPanel>
                <TextBox Name="CompanyName" HorizontalAlignment="Left" Margin="21,19,0,0" TextWrapping="Wrap" Text="CompanyName" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <TextBox Name="CompanyTIN" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="ИНН" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <TextBox Name="CompanyLegalAddress" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="Legal Address" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>

                <TextBox Name="CompanyActualAddress" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="Actual Address" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
            <Button Content="Создать Компанию" Width="147" Click="CreateCompany"/>
            
        </StackPanel>
        <StackPanel>
                <TextBox Name="EmployeeFirstName" HorizontalAlignment="Left" Margin="21,19,0,0" TextWrapping="Wrap" Text="EmployeeFirstName" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <TextBox Name="EmployeeLastName" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="EmployeeLastName" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <TextBox Name="EmployeePassportSerial" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="PassportSerial" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <TextBox Name="EmployeePassportNumber" HorizontalAlignment="Left" Margin="25,63,0,0" TextWrapping="Wrap" Text="PassportNumber" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
                <Button Content="Создать Сотрудника" Width="147" Click="CreateEmployee"/>

            </StackPanel>
        </StackPanel>
    </Grid>

</Window>
